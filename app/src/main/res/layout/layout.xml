<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#003891">

    <!-- Top Bar -->
    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp">

        <!-- Chore Buddy Icon -->
        <ImageView
            android:id="@+id/icon_chore_buddy"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:paddingEnd="8dp"
            android:src="@drawable/chores_buddy" />

        <!-- Title -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="51dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="12dp"
            android:text="@string/title_text"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="40sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <!-- Top Divider Line -->
    <View
        android:id="@+id/top_divider_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#1964BD" />


    <!-- Body -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:padding="20dp">

        <!-- Your body content goes here -->

    </RelativeLayout>

    <View
        android:id="@+id/bottom_divider_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#1964BD" />

    <!-- Bottom Bar -->
    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="18dp">

        <!-- Home Button -->
        <ImageView
            android:id="@+id/home_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/home_button"
            android:layout_gravity="center" /> <!-- Centering the icon horizontally -->

        <!-- User Icon -->
        <ImageView
            android:id="@+id/user_icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/user"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_gravity="center" /> <!-- Centering the icon horizontally -->

        <!-- List Icon -->
        <ImageView
            android:id="@+id/list_icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/list"
            android:layout_gravity="center" /> <!-- Centering the icon horizontally -->

    </LinearLayout>

</LinearLayout>
